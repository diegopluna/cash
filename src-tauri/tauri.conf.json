{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cash",
  "version": "../package.json",
  "identifier": "com.dpeter.cash",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Cash",
        "width": 1280,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1200,
        "minHeight": 800,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "migrations/*"
    ],
    "macOS": {
      "hardenedRuntime": true,
      "entitlements": null,
      "providerShortName": null
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZCRTRGMjdEQzIzMjY2OTcKUldTWFpqTENmZkxrYXdxY0FIcWZwazBLZDk1d2xCd1I1YVVOMnhOamw4N2JuZVNoc3hvSElPK0kK",
      "endpoints": [
        "https://github.com/diegopluna/cash/releases/latest/download/latest.json"
      ]
    },
    "sql": {
      "preload": [
        "sqlite:database.db"
      ]
    }
  }
}
